<div class="container">
  <h1>Add New Client</h1>
    <div class="jumbotron">
      <%= form_with scope: :client, url: clients_path  ,local: true do |form| %>
        <% if @client.errors.any? %>
          <div id="error_explanation">
            <ul>
              <% @client.errors.full_messages.each do |msg| %>
                <li style="color:gray;"><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="form-group">
          <%= form.text_field :name , placeholder:'Enter Client Name',class:"form-control",required: true %>
        </div>
        <div class="form-group">
           <%= form.text_field :country , placeholder:'Enter Country', class:"form-control",required:true %>
        </div>
        <%= form.submit 'Submit' ,class:"btn btn-primary btn-md"%>
       <%= link_to 'Back', clients_path, class:"btn btn-primary btn-md"%>
      <% end %>
    </div>
</div>