<div class="container">
  <h1>Add New Client</h1>
    <div class="jumbotron">
      <%= form_with scope: :client,url: client_path,method: :put,local: true do |form| %>
        <% if @client.errors.any? %>
          <div id="error_explanation">
            <ul>
              <% @client.errors.full_messages.each do |msg| %>
                <li style="color:gray;"><%= msg %></li>
                <% end %>
            </ul>
          </div>
        <% end %>
        <div class="form-group">
          <%= form.text_field :name , placeholder:'Enter Client name',class:"form-control", required: true %>
        </div>
        <div class="form-group">
           <%= form.text_field :country , placeholder:'Enter Country Name', class:"form-control", required: true  %>
        </div>
        <%= form.submit 'Submit' ,class:"btn btn-primary btn-md"%>
       
      <% end %>
      
    </div>
</div>