<div class="container">
  <h1>Add New Employee</h1>
    <div class="jumbotron">
      <%= form_with scope: :employee, url: employees_path  ,local: true do |form| %>
      <% if @employee.errors.any? %>
          <div id="error_explanation">
            <ul>
              <% @employee.errors.full_messages.each do |msg| %>
                <li style="color:gray;"><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="form-group">
          <%= form.text_field :name , placeholder:'Enter Name',class:"form-control", required: true %>
        </div>
        <div class="form-group">
          <%= form.text_field :email , placeholder:'Enter email', class:"form-control", required: true %>
        </div>
         <div class="form-group">
           <%= form.text_field :experience , placeholder:'Enter Experience', class:"form-control", required: true  %>
        </div>
        <div class="form-group">
          <%= form.select(:technology_id,Technology::LIST,{include_blank: 'Select Technology'},{class:"form-control", required: 'true'})%>
        </div>
        <div class="form-group">
           <%= form.select(:role,["Developer","Project Manager"],{include_blank: 'Select Role'},{class:"form-control", required: 'true'})%>
        </div>
         <div class="form-group">
           <%= form.select(:status,{:Active=> true,:Deactive=>false},{include_blank: 'Select Status'},{class:"form-control", required: 'true'})%>
        </div>
        <%= form.submit 'Submit' ,class:"btn btn-primary btn-md"%>
        <%= link_to 'Back', employees_path, class:"btn btn-primary btn-md"%>
      <% end %>
      
    </div>
</div>